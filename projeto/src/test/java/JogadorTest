import org.junit.jupiter.api.Assertions;
import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;

import java.util.ArrayList;
import java.util.List;

public class JogadorTest {

    private Jogador jogador;
    private Carta carta;

    @BeforeEach
    public void setUp() {
        jogador = new Jogador("Alice");
        carta = new Carta("√Ås", "Copas");
    }

    @Test
    public void testAdicionarCarta() {
        jogador.adicionarCarta(carta);
        List<Carta> mao = jogador.getMao();

        Assertions.assertEquals(1, mao.size());
        Assertions.assertEquals(carta, mao.get(0));
    }

    @Test
    public void testRemoverCarta() {
        jogador.adicionarCarta(carta);
        jogador.removerCarta(carta);
        List<Carta> mao = jogador.getMao();

        Assertions.assertTrue(mao.isEmpty());
    }

    @Test
    public void testGetNome() {
        String nome = jogador.getNome();

        Assertions.assertEquals("Alice", nome);
    }

    @Test
    public void testToString() {
        String nome = jogador.toString();

        Assertions.assertEquals("Alice", nome);
    }
}
